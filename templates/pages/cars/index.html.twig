{% extends 'base.html.twig' %}

{% block title %}Les annonces Voitures{% endblock %}

{% block body %}

<div class="container">
    <h1>Annonces de voitures</h1>

    {# read and display just one flash message type #}
    {% for message in app.flashes('success') %}
      <div class="alert alert-success mt-4">
          {{ message }}
      </div>
    {% endfor %}
      <div class="wrapper">
      {% if cars is not empty %}

        {% for car in cars %}
        <div class="col-lg-4">
              <div class="card mb-3">
              <h3 class="card-header">{{ car.name }}</h3>
              <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
              <rect width="100%" height="100%" fill="#868e96"></rect>
              <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
              </svg>
              <div class="card-body">
              <p class="card-text">{{ car.description }}</p>
              </div>
              <ul class="list-group list-group-flush">
              <li class="list-group-item">{{ car.power }}ch</li>
              <li class="list-group-item">Contr√¥le technique : {{ car.CT ? 'ok' : 'not ok' }}</li>
              <li class="list-group-item">{{ car.color.name }}</li>
              </ul>              
              <div class="card-footer text-muted">
                  {{ car.price }}&euro;
              </div>
            </div>
          </div>
        {% endfor %}
        
    {% else %}

    <p>Aucune voiture</p>

    {% endif %}

      </div>
    </div>

{% endblock %}
