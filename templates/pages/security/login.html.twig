{% extends 'base.html.twig' %}

{% block title %}Login utilisateur{% endblock %}

{% block body %}
<div class="container">

 		<h1 class="mt-4">Login</h1>

		<form action="{{ path('security.login') }}" method="post" name="login">
			<div class="form-group">
				<label for="username" class="form-label mt-4">Adresse email</label>
				<input type="email" class="form-control" id="username" name="_username" placeholder="exemple@zegoodcoin.fr">
			</div>
			<div class="form-group">
				<label for="password" class="form-label mt-4">Mot de passe</label>
				<input type="password" class="form-control" id="password" name="_password" placeholder="********">
			</div>

			<button type="submit" class="btn btn-primary mt-4">
				Se connecter
			</button>
		</form>

</div>
{% endblock %}